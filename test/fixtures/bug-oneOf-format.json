[
    {
        "description": "`uri` format in oneOf returns bad error when definition is second",
        "schema": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "which": {
                            "type": "string",
                            "enum": [ "text" ]
                        },
                        "value": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "which": {
                            "type": "string",
                            "enum": [ "site" ]
                        },
                        "value": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            ]
        },
        "tests": [
            {
                "description": "site oneOf valid",
                "data": {
                    "which": "site",
                    "value": "http://foo.com"
                },
                "valid": true
            },
            {
                "description": "text oneOf valid",
                "data": {
                    "which": "text",
                    "value": "Lorem ipsum"
                },
                "valid": true
            },
            {
                "description": "site oneOf invalid",
                "data": {
                    "which": "site",
                    "value": "no"
                },
                "valid": false,
                "expected": {
                    "validation": {
                        "value": {
                            "format": true
                        }
                    }
                }
            },
            {
                "description": "text oneOf invalid",
                "data": {
                    "which": "text",
                    "value": ""
                },
                "valid": false,
                "expected": {
                    "validation": {
                        "value": {
                            "minLength": true
                        }
                    }
                }
            }
        ]
    },

